{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "preserveConstEnums": true,

    "outDir": "build/dist"
  }
}
